<div class="container">
  <div class="row">
    <form method="POST" action="/login">
      <% if @error_messages %>
        <ul class="errors">
          <% @error_messages.each do |message| %>
            <li><h2 class="error_style"><%= message %></h2></li>
          <% end %>
        </ul>
      <% end %>
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <div class="form-group login_from_navbar">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control profile_spacing" placeholder="Please enter your username"><br>
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control profile_spacing" placeholder="Please enter your password">
        </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info">Log In</button>
      </div>
      <div class="col-sm-4"></div>
    </form>
  </div>
</div>
